@switch (Number)
{
    case < 18.6:
    {
        <h1 class="warning">@Number.ToString("0")</h1>
        break;
    }
    case >= 18.6 and <= 24.9:
    {
        <h1 class="success">@Number.ToString("0")</h1>
        break;
    }
    case >= 24.9:
    {
        <h1 class="danger">@Number.ToString("0")</h1>
        break;
    }
}

@code {
    [Parameter] [EditorRequired] public double Number { get; set; }
}